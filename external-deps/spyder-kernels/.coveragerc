[run]
omit =
    # Omit tests
    */tests/*
    # Omit external files
    */external/*
    # Omit site files
    */utils/site/*

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
fail_under=0
